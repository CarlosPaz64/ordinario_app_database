section.dashboard
  .top
    i.uil.uil-bars.sidebar-toggle
    .search-box
      i.uil.uil-search
      input(type="text", placeholder="Search here...")

  .app
    main.project
      .project-info
        h1 All your tasks
        if error
          p.error= error
        .project-participants
          // Bot√≥n para abrir el modal view
          button.project-participants__add#myBtn Add Participant

      .project-tasks
        .project-column
          .project-column-heading
            h2.project-column-heading__title To do

          each task in tasks
            if task.estatus === 'To do'
              .task(draggable="true")
                .task__tags
                  span.task__tag(class="task__tag--" + task.importancia)= task.importancia
                  button.task__options
                    i.fas.fa-ellipsis-h
                  .options-menu
                    button.option-btn Editar
                    button.option-btn Eliminar
                p= task.descripcion
                .task__stats
                  span
                    time(datetime=task.fecha_finalizacion)
                      i.fas.fa-flag #{task.fecha_finalizacion}
                  span.task__owner
                    i.fas.fa-check(data-task-id=task.id)

        .project-column
          .project-column-heading
            h2.project-column-heading__title Doing

          each task in tasks
            if task.estatus === 'Doing'
              .task(draggable="true")
                .task__tags
